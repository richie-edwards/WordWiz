@model WordWizApp.Models.Sentence

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Vocabulary Word: @Model.Word.Name.ToUpper() </h2>
        <br />
        <h3>Add Sentence</h3>

        <div class="form-group">
            <div class="col-md-8">
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "sentence" } })
            </div>
        </div>
    </div>
    <input type="submit" formmethod="post" value="Update" class="btn btn-sm btn-success" />
}
